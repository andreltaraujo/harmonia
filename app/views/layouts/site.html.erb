            <li data-target="#carousel-example-generic" data-slide-to="7"></li>
            <li data-target="#carousel-example-generic" data-slide-to="8"></li>
            <li data-target="#carousel-example-generic" data-slide-to="9"></li>
          </ol>
          <div class="carousel-inner">
            <div class="item active" style="background-image: url('/assets/01.jpg');">
              <%= image_tag '01.jpg', alt:"" %>
            </div>
            <div class="item" style="background-image: url('/assets/02.jpg');">
              <%= image_tag '02.jpg', alt:"" %>
            </div>
            <div class="item" style="background-image: url('/assets/03.jpg');">
              <%= image_tag '03.jpg', alt:"" %>
            </div>
            <div class="item" style="background-image: url('/assets/04.jpg');">
              <%= image_tag '04.jpg', alt:"" %>
            </div>
            <div class="item" style="background-image: url('/assets/05.jpg');">
              <%= image_tag '05.jpg', alt:"" %>
            </div>
            <div class="item" style="background-image: url('/assets/06.jpg');">
              <%= image_tag '06.jpg', alt:"" %>
            </div>
            <div class="item" style="background-image: url('/assets/07.jpg');">
              <%= image_tag '07.jpg', alt:"" %>
            </div>
            <div class="item" style="background-image: url('/assets/08.jpg');">
              <%= image_tag '08.jpg', alt:"" %>
            </div>
            <div class="item" style="background-image: url('/assets/09.jpg');">
              <%= image_tag '09.jpg', alt:"" %>
            </div>
            <div class="item" style="background-image: url('/assets/10.jpg');">
              <%= image_tag '10.jpg', alt:"" %>
            </div> 
          </div>        
        </div>
      </section>
      <!--FIM section (#banner)-->
      <section id="imageScroll">
        <div class="clearfix"></div>
      </section>
      <section id="menuCorpo">
        <div class="container">
          <%= link_to image_tag('associe.png', class:'btnassoc'), new_user_registration_path %>
            <h3 id="frase">...E faça parte do marior clube de benefícios do Brasil.</h3>
        </div>
      </section>
     
      <%= yield %>
      
    <footer id="rodape">
      <div class="container">
        <div class="media-container-row content text-white">
          <div class="col-12 col-md-3">
            <div class="media-wrap">
              <%= link_to image_tag('logo.png', size:"125x70"), "#" %>
            </div>
          </div>
            <div class="col-12 col-md-3 mbr-fonts-style display-7">
              <h5 class="pb-3">
                Endereço
              </h5>
              <p class="mbr-text">
                Rua: Frei Antônio de Pádua, 1020<br>
                Guanabara - Campinas/SP
              </p>
            </div>
            <div class="col-12 col-md-3 mbr-fonts-style display-7">
              <h5 class="pb-3">
                Copyright ©<span><strong> ABRASPESP </strong></span>2019
              </h5>
              Todos os direitos reservados.
            </div>
            <div class="col-12 col-md-3 mbr-fonts-style display-7">
              <h5 class="pb-3">
                Contatos
              </h5>
              <p class="mbr-text">
                Email: andreguia@hotmail.com<br>
                Fone: +55 (11) 9 4969 0036
              </p>
            </div> 
        </div>
      </div>
      <!--FIM .container-->
      <div class="clearfix"></div>
    </footer>
    <!--FIM footer (#rodape)-->

    <%= javascript_include_tag 'application', 'site' %>

    <% if notice %> 
      <%= javascript_tag do %>
        $.bootstrapGrowl('<%= notice %>', {
          type: 'success', // (null, 'info', 'danger', 'success')
          offset: {from: 'top', amount: 20}, // 'top', or 'bottom'
          align: 'center', // ('left', 'right', or 'center')
          width: 250, // (integer, or 'auto')
          delay: 4000, // Time while the message will be displayed. It's not equivalent to the *demo* timeOut!
          allow_dismiss: true, // If true then will display a cross to close the popup.
          stackup_spacing: 10 //
        });
      <% end %>
    <% end %>
    
    <% if alert %> 
      <%= javascript_tag do %>
        $.bootstrapGrowl('<%= alert %>', {
          type: 'danger', // (null, 'info', 'danger', 'success')
          offset: {from: 'top', amount: 20}, // 'top', or 'bottom'
          align: 'right', // ('left', 'right', or 'center')
          width: 250, // (integer, or 'auto')
          delay: 4000, // Time while the message will be displayed. It's not equivalent to the *demo* timeOut!
          allow_dismiss: true, // If true then will display a cross to close the popup.
          stackup_spacing: 10 //
        });
      <% end %>
    <% end %>
    
    <script type="text/javascript">
      $(document).ready(function() {
        $('#imageScroll').scrollingCarousel({
          autoScroll: true,
          autoScrollSpeed: 50000
        });
        $("a[href='"+window.location+"']").parents("li").addClass('ativo');
      });
    </script>

  </body>
</html>