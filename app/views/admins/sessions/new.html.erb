<div class="container">
  <div class="row justify-content-center">  
    <div class="col-xl-10 col-lg-12 col-md-9">
      <div class="card o-hidden border-0 shadow-lg my-5">
        <div class="card-body p-0">
          <div class="row justify-content-md-center">
            <div class="col-lg-6">
              <div class="p-5">
                <div class="text-center">
                  <h1 class="h4 text-gray-900 mb-4"><%= t('headers.welcome') %></h1>
                </div>
              
                <%= form_for(resource, as: resource_name, url: session_path(resource_name),
                  html: { class:"user" }) do |f| %>
                  <div class="form-group">
                    <%= f.email_field :email, autofocus: true, class:"form-control form-control-user", id:"exampleInputEmail", placeholder: "Enter Email Address..." %>
                  </div>
                  <div class="form-group">
                    <%= f.password_field :password, class:"form-control form-control-user", id:"exampleInputPassword", placeholder: "Password" %>
                  </div>
                  <% if devise_mapping.rememberable? %>
                    <div class="form-group">
                      <div class="custom-control custom-checkbox small">
                        <%= f.check_box :remember_me, class:"custom-control-input", id:"customCheck" %>
                        <%= f.label :remember_me, class:"custom-control-label", for:"customCheck" %>
                      </div>
                    </div>
                  <% end %>
                  <div class="actions">
                    <%= f.submit t('label.Signin'), class:"btn btn-primary btn-user btn-block" %>
                  </div>
                <% end %><hr>
              </div>
              <div class="text-center small" style="padding-bottom: 10px;">
                <%= render "admins/shared/links" %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>