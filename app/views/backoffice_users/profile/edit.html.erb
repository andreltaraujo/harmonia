<% if @user.user_profile.blank? %>
  <%= render partial: 'backoffice_users/profile/shared/form',
   locals: { action_message: t('headers.registering', model: @user.model_name.human) } %>
<% else %>
  <%= render partial: 'backoffice_users/profile/shared/form',
   locals: { action_message: t('headers.editing', model: @user.model_name.human) } %>
<% end %>